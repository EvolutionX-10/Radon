{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "helpers:pinGitHubActionDigests"],
	"labels": ["Type: Dependencies"],
	"automerge": true,
	"automergeType": "pr-comment",
	"automergeStrategy": "squash",
	"automergeComment": "Auto Merged dependencies",
	"major": {
		"dependencyDashboardApproval": true,
		"addLabels": ["Dependencies: Major"],
		"reviewers": ["EvolutionX-10"]
	},
	"minor": {
		"addLabels": ["Dependencies: Minor"],
		"automerge": true
	},
	"patch": {
		"addLabels": ["Dependencies: Patch"],
		"automerge": true
	},
	"timezone": "Asia/Kolkata",
	"schedule": ["before 6pm every weekday"],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/"
		},
		{
			"matchPackagePatterns": ["discord-api-types"],
			"enabled": false
		},
		{
			"matchPackagePatterns": ["discord.js"],
			"enabled": false
		}
	]
}
