{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"#lib/*": ["lib/*"],
			"#models": ["models/index.ts"],
			"#vars": ["./vars.ts"],
			"#config": ["./config.ts"]
		},
		"composite": true,
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"suppressImplicitAnyIndexErrors": true,
		"skipLibCheck": true,
		"module": "ESNext"
	},
	"include": [".", "./**/*.json"],
	"exclude": ["./tsconfig.json"]
}
